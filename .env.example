# Environment Configuration for Train Booking System
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=postgresql://trainadmin:trainpass123@db-primary:5432/train_booking
REPORTS_DATABASE_URL=postgresql://trainadmin:trainpass123@db-reports:5432/train_reports

# Database credentials
DB_USER=trainadmin
DB_PASSWORD=trainpass123
DB_NAME=train_booking
DB_HOST=db-primary
DB_PORT=5432

# Reports Database
REPORTS_DB_NAME=train_reports
REPORTS_DB_HOST=db-reports
REPORTS_DB_PORT=5432

# Replication
REPLICATION_USER=replicator
REPLICATION_PASSWORD=replicapass123

# Application Configuration
NODE_ENV=production
PORT=5173
HOST=0.0.0.0

# Session Secret (generate a secure random string for production)
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# CORS Settings (adjust for your frontend domain)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
